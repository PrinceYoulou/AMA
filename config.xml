<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns   = "http://www.w3.org/ns/widgets"
        xmlns:gap   = "http://phonegap.com/ns/1.0"
        id          = "com.princeyoulou.ama"
        versionCode = "18" 
        version     = "1.8" >
    <!-- versionCode is optional and Android only. It must be an integer -->
    

    <name>AMA</name>

    <description>
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Laboriosam, impedit.
    </description>

    <author href="#" email="princeyoulou@princeyoulou.com">
        Intense Pixel Studio
    </author>

    <!-- build only for android -->
    <platform name="android" />

    <!-- icon -->
    <icon src="icon.png" />


    <!-- no permission required -->
    <preference name="permissions" value="none" />

    <preference name="fullscreen" value="false" />

    <!-- call plugin -->
    <plugin spec="https://github.com/Rohfosho/CordovaCallNumberPlugin.git" source="git" />
    <plugin name="Cordova Call Number Plugin" />

    <!-- launching of external app -->
    <access origin="tel:*" launch-external="yes" />

    <!-- make phone numbers clickable like text -->
    <uses-permission android:autoLink="phone" />


    <!-- access to external links -->
    <preference name="stay-in-webview" value="false"/>
    <access origin="*" browserOnly="true"/>

</widget>

